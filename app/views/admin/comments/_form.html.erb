<%= form_for([:admin, @comment]) do |f| %>
    <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@comment.errors.count, "error") %> lo que est√° mal:</h2>

          <ul>
            <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="fields">
      <p>
        <label>Email</label>
        <%= f.text_field :author %>
      </p>
      <p>
        <label>Lo que han dicho:</label>
        <%= f.text_area :content %>
      </p>
    </div>
    <div class="actions">
      <%= f.submit 'Guardar' %>
    </div>
<% end %>
