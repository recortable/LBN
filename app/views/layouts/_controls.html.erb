<div id="comments" style="display:none;">
  <div class="list">
    <% Comment.limit(10).each do |comment| %>
        <p class="unselectable">
          <span class="time">hace <%= time_ago_in_words comment.created_at %>&nbsp;</span><%= comment.content %>
        </p>
    <% end %>
  </div>
</div>