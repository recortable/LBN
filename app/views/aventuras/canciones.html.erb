<div id="container">
  <div class="row">
    <img id="lbn" src="/images/aventuras/lasbuenasnoches.png"/>
  </div>

  <% AventurasController::CANCIONES.each_with_index do |cancion, index| %>
      <% if index % 4 == 0 %>
          <div class="row">
      <% end %>
      <div class="song">
        <%= link_to cancion, cancion, :id => "cancion-#{cancion}" %>
      </div>
      <% if (index + 1) % 4 == 0 %>
          </div>
      <% end %>
  <% end %>
</div>

